---
// src/components/ProjectCard.astro
interface Props {
  title: string;
  description: string;
  technologies: string[];
  imageSrc: string; // Path to your project image/gif
  link: string; // Link to the detailed project page
}

const { title, description, technologies, imageSrc, link } = Astro.props;
---

<a
  href={link}
  class="group block bg-space-dark rounded-xl overflow-hidden shadow-lg transform hover:scale-105 transition-all duration-300 hover:shadow-2xl animate-on-scroll"
>
  <div class="relative overflow-hidden w-full h-48 sm:h-56 md:h-64">
    <!-- Placeholder image, replace with actual project image/gif -->
    <img
      src={imageSrc || `https://placehold.co/600x400/4A4A8A/E0E0F0?text=${encodeURIComponent(title)}`}
      alt={`Preview of ${title}`}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-space-dark/80 to-transparent"></div>
  </div>
  <div class="p-6">
    <h3 class="text-2xl font-semibold text-accent-blue group-hover:text-accent-purple transition-colors duration-300 mb-2">
      {title}
    </h3>
    <p class="text-star-light text-sm mb-4 line-clamp-3">
      {description}
    </p>
    <div class="flex flex-wrap gap-2 text-xs">
      {technologies.map(tech => (
        <span class="bg-space-blue text-star-light px-3 py-1 rounded-full opacity-80 group-hover:opacity-100 transition-opacity duration-300">
          {tech}
        </span>
      ))}
    </div>
  </div>
</a>
