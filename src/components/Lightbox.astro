<div id="lightbox" class="fixed inset-0 z-[100] hidden bg-black/95 flex items-center justify-center p-4 opacity-0 transition-opacity duration-300 backdrop-blur-sm">
    <button id="lightbox-close" class="absolute top-6 right-6 text-white/70 hover:text-white transition-colors p-2 z-[110]" aria-label="Close lightbox">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </button>
    
    <div class="relative w-full h-full flex flex-col items-center justify-center">
        <img id="lightbox-img" src="" alt="Lightbox" class="max-w-full max-h-[85vh] object-contain rounded-md shadow-2xl transform scale-95 transition-transform duration-300" />
        <p id="lightbox-caption" class="text-white/90 text-lg mt-4 font-medium px-4 text-center max-w-2xl"></p>
    </div>
</div>

<script>
    let lightbox: HTMLElement | null = null;
    let lightboxImg: HTMLImageElement | null = null;
    let lightboxCaption: HTMLElement | null = null;
    let closeBtn: HTMLElement | null = null;

    // Function to open lightbox
    const openLightbox = (src: string, alt: string, caption: string) => {
        if (!lightbox || !lightboxImg || !lightboxCaption) return;
        
        lightboxImg.src = src;
        lightboxImg.alt = alt;
        lightboxCaption.textContent = caption || alt;
        
        lightbox.classList.remove('hidden');
        // Small delay to allow display:block to apply before opacity transition
        requestAnimationFrame(() => {
            lightbox.classList.remove('opacity-0');
            lightboxImg?.classList.remove('scale-95');
            lightboxImg?.classList.add('scale-100');
        });
        document.body.style.overflow = 'hidden';
    };

    // Function to close lightbox
    const closeLightbox = () => {
        if (!lightbox || !lightboxImg) return;
        
        lightbox.classList.add('opacity-0');
        lightboxImg.classList.remove('scale-100');
        lightboxImg.classList.add('scale-95');
        
        setTimeout(() => {
            lightbox.classList.add('hidden');
            lightboxImg.src = '';
            document.body.style.overflow = '';
        }, 300);
    };

    // Attach click events to all images in the prose content
    const attachImageListeners = () => {
        // Broaden selector to include images in gallery grids as well as prose
        const contentImages = document.querySelectorAll('.prose img, .gallery-grid img');
        
        contentImages.forEach(img => {
            // Skip images inside buttons (like slideshow thumbnails)
            if (img.closest('button')) return;

            if (img.hasAttribute('data-lightbox-initialized')) return;
            
            img.classList.add('cursor-zoom-in', 'transition-transform', 'duration-300', 'hover:scale-[1.02]');
            img.setAttribute('data-lightbox-initialized', 'true');
            
            img.addEventListener('click', (e) => {
                const target = e.target as HTMLImageElement;
                // Find caption if it exists in figure
                const figcaption = target.closest('figure')?.querySelector('figcaption')?.textContent || '';
                openLightbox(target.src, target.alt, figcaption);
            });
        });
    };

    // Initialize elements and listeners - runs on every navigation
    const initLightbox = () => {
        lightbox = document.getElementById('lightbox');
        lightboxImg = document.getElementById('lightbox-img') as HTMLImageElement;
        lightboxCaption = document.getElementById('lightbox-caption');
        closeBtn = document.getElementById('lightbox-close');

        // Re-attach internal lightbox listeners since elements are new
        if (closeBtn) {
            closeBtn.onclick = closeLightbox; // Use property to avoid accumulation
        }
        
        if (lightbox) {
            lightbox.onclick = (e) => {
                if (e.target === lightbox || e.target === lightbox?.querySelector('.relative')) {
                    closeLightbox();
                }
            };
        }

        attachImageListeners();
    };

    // Global Keydown (only need one, but ensure it uses current refs?)
    // document events persist, but we only need to add once. 
    // However, since we redeclare refs, the closure might be stale if we don't be careful.
    // Actually, closures capture the variable reference (binding), not value. So updating `lightbox` variable works.
    // We just need to make sure we don't add multiple keydown listeners.
    
    // Simplest way for keydown: Just add it once or check? 
    // Since this script runs once, we can add it once.
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeLightbox();
    });

    // Run on every page load (initial + view transitions)
    document.addEventListener('astro:page-load', initLightbox);
</script>

